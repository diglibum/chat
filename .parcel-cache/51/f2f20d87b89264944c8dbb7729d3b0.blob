.input {
  margin-top: 16px;
}
.input__label {
  font-size: 9px;
  line-height: 9px;
  display: block;
  color: var(--light-color);
}
.input__input {
  margin-top: 8px;
  width: 100%;
  border: none;
  outline: none;
  border-bottom: 1px solid var(--primary-color);
  padding-bottom: 7px;
  background-color: transparent;
}
.input__error-message {
  color: var(--error-color);
  margin-top: 7px;
  font-size: 8px;
  line-height: 8px;
}
.input-profile {
  position: relative;
}
.input-profile__label {
  display: block;
  position: absolute;
  font-size: 13px;
  line-height: 13px;
  top: 3px;
}
.input-profile__input {
  margin-top: 3px;
  width: 100%;
  border: none;
  outline: none;
  border-bottom: 1px solid #EAEAEA;
  padding-bottom: 7px;
  background-color: transparent;
  text-align: right;
  padding-left: 90px;
}
.input-profile__error-message {
  color: var(--error-color);
  margin-top: 7px;
  font-size: 8px;
  line-height: 8px;
}