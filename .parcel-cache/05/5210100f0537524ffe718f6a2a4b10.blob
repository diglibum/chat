@import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap");
* {
  font-family: "Inter", sans-serif;
  margin: 0;
  padding: 0;
  color: #1E1E1E;
  font-weight: 500;
}
*,
*::before,
*::after {
  box-sizing: border-box;
}
body {
  font-size: 12px;
  line-height: 15px;
}
:root {
  --primary-color: #29C188;
  --secondary-color: #46C2F5;
  --complementary-color: #FFDE6C;
  --light-color: #999999;
  --error-color: #FF2F2F;
  --bg-color-light: #FBFBFB;
  --bg-color-dark: #EFEFEF;
  --primary-font-family: "Open Sans", sans-serif;
}
a {
  color: var(--primary-color);
}
.hide {
  height: 0;
  visibility: hidden;
  opacity: 0;
}
.arrow-button {
  width: 28px;
  height: 28px;
  background-color: var(--primary-color);
  color: var(--primary-color);
  border: none;
  outline: none;
  border-radius: 100%;
  position: relative;
}
.arrow-button:before {
  position: absolute;
  width: 28px;
  height: 28px;
  top: 0;
  left: 0;
  content: "";
  background-image: url("a7051706d37bed5e08c406273502d22e");
  background-repeat: no-repeat;
  background-position: center;
  cursor: pointer;
}