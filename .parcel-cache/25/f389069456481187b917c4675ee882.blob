.home-page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  min-height: 100vh;
}
.home-page__container {
  border-radius: 12px;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.14);
  width: 340px;
  background: #FFFFFF;
  padding: 30px 50px;
  min-height: 460px;
}
.home-page__header {
  font-weight: 500;
  font-size: 20px;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 25px;
}